{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../../dist/out-tsc",
        "declaration": true,
        "declarationMap": true,
        "inlineSources": true,
        "types": ["node", "jquery"]
    },
    "include": ["src/**/*.ts"],
    "exclude": [
        "src/test.ts",
        "src/**/*.spec.ts",
        "cypress/**/*",
        "cypress.config.ts",
        "**/*.cy.ts",
        "**/*.cy.js",
        "**/*.cy.tsx",
        "**/*.cy.jsx"
    ]
}
