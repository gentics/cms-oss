<settings>
	<mirrors>
		<mirror>
			<id>gentics.nexus.maven-central</id>
			<name>Gentics Nexus Maven Mirror</name>
			<url>https://repo.gentics.com/repository/maven-central/</url>
			<mirrorOf>central,maven2,maven2-repository,oss.sonatype.org,jboss-repository,maven-repository.dev.java.net,repo.jenkins-ci.org</mirrorOf>
		</mirror>
	</mirrors>
	<servers>
		<server>
			<id>gentics.nexus.maven-central</id>
			<username>${env.repoUsername}</username>
			<password>${env.repoPassword}</password>
		</server>
		<server>
			<id>gentics.nexus.releases-oss</id>
			<username>${env.repoUsername}</username>
			<password>${env.repoPassword}</password>
		</server>
		<server>
			<id>gentics.nexus.releases</id>
			<username>${env.repoUsername}</username>
			<password>${env.repoPassword}</password>
		</server>
		<server>
			<id>gentics.nexus.snapshots</id>
			<username>${env.repoUsername}</username>
			<password>${env.repoPassword}</password>
		</server>
		<server>
			<id>gentics.nexus.thirdparty</id>
			<username>${env.repoUsername}</username>
			<password>${env.repoPassword}</password>
		</server>
	</servers>

	<profiles>
		<profile>
			<id>misc</id>
			<properties>
				<JAVA_1_8_HOME>/usr/lib/jvm/java-8-oracle</JAVA_1_8_HOME>
			</properties>
		</profile>
		<profile>
			<!-- Fixes OpenJDK bug https://stackoverflow.com/questions/53010200/maven-surefire-could-not-find-forkedbooter-class/53105007 -->
			<id>SUREFIRE-1588</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<argLine>-Djdk.net.URLClassPath.disableClassPathURLCheck=true</argLine>
			</properties>
		</profile>
	</profiles>
	<activeProfiles>
		<activeProfile>misc</activeProfile>
		<activeProfile>SUREFIRE-1588</activeProfile>
	</activeProfiles>
</settings>
