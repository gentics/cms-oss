{
    "name": "admin-ui",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "prefix": "gtx",
    "sourceRoot": "{projectRoot}/src",
    "tags": ["app", "ui", "angular"],
    "targets": {
        "build": {
            "executor": "@nx/angular:webpack-browser",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/{projectRoot}",
                "index": "{projectRoot}/src/index.html",
                "main": "{projectRoot}/src/main.ts",
                "polyfills": ["{projectRoot}/src/polyfills.ts"],
                "tsConfig": "{projectRoot}/tsconfig.app.json",
                "assets": [
                    "{projectRoot}/src/favicon.ico",
                    "{projectRoot}/src/assets"
                ],
                "styles": ["{projectRoot}/src/styles/styles.scss"],
                "stylePreprocessorOptions": {
                    "includePaths": [
                        "{projectRoot}/src/styles",
                        "libs",
                        "node_modules"
                    ]
                },
                "scripts": [],
                "allowedCommonJsDependencies": [
                    "@bevacqua/rome",
                    "@gentics/ui-core",
                    "angular2-hotkeys",
                    "dom-serialize",
                    "punycode",
                    "semver",
                    "serialize-to-js",
                    "stacktrace-js"
                ],
                "aot": true,
                "buildOptimizer": false,
                "optimization": false,
                "vendorChunk": true,
                "extractLicenses": false,
                "sourceMap": true,
                "namedChunks": true
            },
            "configurations": {
                "production": {
                    "budgets": [
                        {
                            "type": "initial",
                            "maximumWarning": "6mb",
                            "maximumError": "20mb"
                        }
                    ],
                    "fileReplacements": [
                        {
                            "replace": "{projectRoot}/src/environments/environment.ts",
                            "with": "{projectRoot}/src/environments/environment.prod.ts"
                        }
                    ],
                    "outputHashing": "all",
                    "optimization": true,
                    "sourceMap": false,
                    "namedChunks": false,
                    "extractLicenses": true,
                    "vendorChunk": false,
                    "buildOptimizer": true
                },
                "development": {}
            },
            "defaultConfiguration": "production"
        },
        "serve": {
            "executor": "@nx/angular:webpack-dev-server",
            "options": {
                "proxyConfig": "proxy.conf.json",
                "liveReload": false
            },
            "configurations": {
                "production": {
                    "browserTarget": "admin-ui:build:production"
                },
                "development": {
                    "browserTarget": "admin-ui:build:development"
                }
            },
            "defaultConfiguration": "development"
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": [
                    "{projectRoot}/**/*.ts",
                    "{projectRoot}/**/*.html"
                ]
            }
        },
        "serve-static": {
            "executor": "@nx/web:file-server",
            "options": {
                "buildTarget": "admin-ui:build"
            },
            "configurations": {
                "e2e": {
                    "proxyUrl": "http://localhost:8080",
                    "proxyOptions": {
                        "secure": false,
                        "changeOrigin": true
                    }
                }
            }
        },
        "component-test": {
            "executor": "@nx/cypress:cypress",
            "options": {
                "cypressConfig": "{projectRoot}/cypress.config.ts",
                "testingType": "component",
                "skipServe": true,
                "devServerTarget": "admin-ui:build",
                "watch": false
            },
            "configurations": {
                "watch": {
                    "watch": true
                }
            }
        }
    }
}
