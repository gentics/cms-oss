{
    "name": "cms-components",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "library",
    "prefix": "gtx",
    "sourceRoot": "libs/cms-components/src",
    "tags": ["lib", "angular", "publish"],
    "targets": {
        "build": {
            "executor": "@nx/angular:ng-packagr-lite",
            "options": {
                "tsConfig": "libs/cms-components/tsconfig.lib.json",
                "project": "libs/cms-components/ng-package.json"
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": [
                    "libs/cms-components/**/*.ts"
                ]
            }
        },
        "component-test": {
            "executor": "@nx/cypress:cypress",
            "options": {
                "cypressConfig": "libs/cms-components/cypress.config.ts",
                "testingType": "component",
                "skipServe": true,
                "devServerTarget": "cms-components:build",
                "watch": false
            },
            "configurations": {
                "watch": {
                    "watch": true
                }
            }
        },
        "nx-release-publish": {
            "executor": "@nx/js:release-publish",
            "options": {
                "packageRoot": "{workspaceRoot}/dist/libs/cms-components"
            }
        }
    }
}
