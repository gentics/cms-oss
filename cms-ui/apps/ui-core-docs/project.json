{
    "name": "ui-core-docs",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "prefix": "gtx",
    "sourceRoot": "apps/ui-core-docs/src",
    "tags": ["app", "docs", "demo", "angular"],
    "targets": {
        "compile": {
            "executor": "nx:run-commands",
            "inputs": ["{projectRoot}/compile-docs.ts", "{projectRoot}/docs.input.json"],
            "outputs": ["{projectRoot}/docs.output.json"],
            "options": {
                "cwd": "apps/ui-core-docs",
                "commands": ["tsx ./compile-docs.ts"]
            }
        },
        "build": {
            "executor": "@nx/angular:webpack-browser",
            "dependsOn": ["compile"],
            "inputs": ["{projectRoot}/docs.output.json"],
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/apps/ui-core-docs",
                "index": "apps/ui-core-docs/src/index.html",
                "main": "apps/ui-core-docs/src/main.ts",
                "polyfills": ["apps/ui-core-docs/src/polyfills.ts"],
                "tsConfig": "apps/ui-core-docs/tsconfig.app.json",
                "assets": [
                    "apps/ui-core-docs/src/favicon.ico",
                    "apps/ui-core-docs/src/assets"
                ],
                "styles": ["apps/ui-core-docs/src/styles.scss"],
                "stylePreprocessorOptions": {
                    "includePaths": [
                        "apps/ui-core-docs/src/styles",
                        "libs",
                        "node_modules"
                    ]
                },
                "scripts": [],
                "allowedCommonJsDependencies": [
                    "@bevacqua/rome",
                    "@gentics/ui-core",
                    "cropperjs"
                ],
                "outputHashing": "all",
                "optimization": true,
                "sourceMap": false,
                "namedChunks": false,
                "extractLicenses": true,
                "vendorChunk": false,
                "buildOptimizer": true,
                "aot": true
            },
            "configurations": {
                "production": {},
                "development": {
                    "buildOptimizer": false,
                    "optimization": false,
                    "vendorChunk": true,
                    "extractLicenses": false,
                    "sourceMap": true,
                    "namedChunks": true
                },
                "ci": {
                    "progress": false
                }
            },
            "defaultConfiguration": "production"
        },
        "serve": {
            "executor": "@nx/angular:dev-server",
            "dependsOn": ["compile"],
            "options": {
                "proxyConfig": "proxy.conf.json",
                "liveReload": false
            },
            "configurations": {
                "production": {
                    "buildTarget": "ui-core-docs:build:production"
                },
                "development": {
                    "buildTarget": "ui-core-docs:build:development"
                }
            },
            "defaultConfiguration": "development",
            "continuous": true
        },
        "test": {
            "executor": "nx:noop"
        },
        "serve-static": {
            "executor": "@nx/web:file-server",
            "options": {
                "buildTarget": "ui-core-docs:build"
            }
        }
    }
}
