{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "name": "mesh-rest-client-angular",
    "projectType": "library",
    "prefix": "gtx",
    "sourceRoot": "apps/mesh-rest-client-angular/src",
    "implicitDependencies": [
        "mesh-models",
        "mesh-rest-client"
    ],
    "tags": ["lib", "angular"],
    "targets": {
        "build": {
            "executor": "@nx/angular:ng-packagr-lite",
            "options": {
                "tsConfig": "libs/mesh-rest-client-angular/tsconfig.lib.json",
                "project": "libs/mesh-rest-client-angular/ng-package.json"
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": [
                    "libs/mesh-rest-client-angular/**/*.ts",
                    "libs/mesh-rest-client-angular/**/*.html"
                ]
            }
        }
    }
}
