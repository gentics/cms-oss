{
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "workspaceLayout": {
        "appsDir": "apps",
        "libsDir": "libs"
    },
    "cli": {
        "packageManager": "npm"
    },
    "defaultProject": "editor-ui",
    "parallel": 3,
    "useInferencePlugins": false,
    "defaultBase": "dev",
    "release": {
        "projectsRelationship": "independent",
        "projects": ["tag:lib"]
    },
    "plugins": [
        {
            "plugin": "@nx/eslint/plugin",
            "options": {
                "targetName": "lint"
            }
        },
        {
            "plugin": "@nx/cypress/plugin",
            "options": {
                "openTargetName": "open-cypress",
                "componentTestingTargetName": "component-test"
            }
        }
    ],
    "generators": {
        "@nx/angular:application": {
            "style": "scss",
            "linter": "eslint",
            "unitTestRunner": "jest",
            "e2eTestRunner": "cypress"
        },
        "@nx/angular:library": {
            "linter": "eslint",
            "unitTestRunner": "jest"
        },
        "@nx/angular:component": {
            "style": "scss"
        }
    },
    "namedInputs": {
        "sharedGlobals": [
            "{workspaceRoot}/package.json",
            "{workspaceRoot}/tsconfig.json"
        ],
        "default": [
            "sharedGlobals",
            "{projectRoot}/src/**/*.ts",
            "{projectRoot}/project.json",
            "{projectRoot}/tsconfig.json",
            "{projectRoot}/tsconfig.app.json",
            "{projectRoot}/tsconfig.lib.json"
        ],
        "building": [
            "default",
            "!{projectRoot}/src/**/*.spec.ts",
            "!{projectRoot}/src/**/*.cy.ts"
        ],
        "production": [
            "building",
            "{projectRoot}/package.json",
            "{projectRoot}/ng-package.json"
        ],
        "envFiles": [
            "{workspaceRoot}/.env",
            "{workspaceRoot}/.env.local"
        ],
        "linting": [
            "{projectRoot}/cypress/**/*",
            "{projectRoot}/e2e/**/*",
            "{projectRoot}/.eslintrc.json",
            "{workspaceRoot}/.eslintrc.js",
            "{workspaceRoot}/.prettierignore",
            "{workspaceRoot}/.prettierrc"
        ],
        "karmaTests": [
            "!{projectRoot}/src/**/*.cy.ts",
            "{projectRoot}/src/**/*.spec.ts",
            "{projectRoot}/tsconfig.spec.json",
            "{projectRoot}/karma.conf.js",
            "{workspaceRoot}/karma.conf.js",
            "{workspaceRoot}/ng-workspace/angular.json"
        ],
        "jestTests": [
            "!{projectRoot}/src/**/*.cy.ts",
            "{projectRoot}/src/**/*.spec.ts",
            "{projectRoot}/tsconfig.spec.json",
            "{projectRoot}/jest.config.ci.js",
            "{projectRoot}/jest.config.js",
            "{workspaceRoot}/jest.config.ts",
            "{workspaceRoot}/jest.preset.ts"
        ],
        "cypressTests": [
            "!{projectRoot}/src/**/*.spec.ts",
            "{projectRoot}/cypress/**/*",
            "{projectRoot}/cypress.config.ci.ts",
            "{projectRoot}/cypress.config.ts",
            "{workspaceRoot}/cypress.preset.js"
        ],
        "playwrightTests": [
            "envFiles",
            "!{projectRoot}/src/**/*.spec.ts",
            "!{projectRoot}/src/**/*.cy.ts",
            "{projectRoot}/e2e/**/*",
            "{projectRoot}/playwright.config.ts",
            "{workspaceRoot}/playwright.config.ts"
        ]
    },
    "targetDefaults": {
        "serve": {
            "inputs": ["default", "^default"]
        },
        "@nx/eslint:lint": {
            "cache": true,
            "inputs": ["default", "linting"]
        },
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["production", "^production"],
            "cache": true
        },
        "test": {
            "inputs": ["default", "karmaTests", "^default"],
            "cache": true
        },
        "@nx/jest:jest": {
            "inputs": ["default", "jestTests", "^default"],
            "cache": true,
            "options": {
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        },
        "@nx/cypress:cypress": {
            "inputs": ["default", "cypressTests", "^default"],
            "cache": true,
            "parallelism": false,
            "configurations": {
                "watch": {
                    "watch": true
                }
            }
        },
        "@nx/playwright:playwright": {
            "inputs": ["default", "playwrightTests", "^default"],
            "cache": false,
            "parallelism": false,
            "configurations": {
                "watch": {
                    "watch": true
                },
                "ci": {}
            }
        }
    }
}
