{
    "name": "ui-core-docs",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "prefix": "gtx",
    "sourceRoot": "{projectRoot}/src",
    "tags": ["app", "docs", "demo", "angular"],
    "targets": {
        "build": {
            "executor": "@nx/angular:webpack-browser",
            "outputs": ["{options.outputPath}"],
            "options": {
                "customWebpackConfig": {
                    "path": "{projectRoot}/webpack.partial.js"
                },
                "outputPath": "dist/{projectRoot}",
                "index": "{projectRoot}/src/index.html",
                "main": "{projectRoot}/src/main.ts",
                "polyfills": ["{projectRoot}/src/polyfills.ts"],
                "tsConfig": "{projectRoot}/tsconfig.app.json",
                "assets": [
                    "{projectRoot}/src/favicon.ico",
                    "{projectRoot}/src/assets"
                ],
                "styles": ["{projectRoot}/src/styles.scss"],
                "stylePreprocessorOptions": {
                    "includePaths": [
                        "{projectRoot}/src/styles",
                        "libs",
                        "node_modules"
                    ]
                },
                "scripts": [],
                "allowedCommonJsDependencies": [
                    "@bevacqua/rome",
                    "@gentics/ui-core",
                    "cropperjs"
                ],
                "aot": true,
                "buildOptimizer": false,
                "optimization": false,
                "vendorChunk": true,
                "extractLicenses": false,
                "sourceMap": true,
                "namedChunks": true
            },
            "configurations": {
                "production": {
                    "budgets": [
                        {
                            "type": "initial",
                            "maximumWarning": "3mb",
                            "maximumError": "5mb"
                        },
                        {
                            "type": "anyComponentStyle",
                            "maximumWarning": "20kb",
                            "maximumError": "30kb"
                        }
                    ],
                    "outputHashing": "all",
                    "optimization": true,
                    "sourceMap": false,
                    "namedChunks": false,
                    "extractLicenses": true,
                    "vendorChunk": false,
                    "buildOptimizer": true
                },
                "development": {}
            },
            "defaultConfiguration": "production"
        },
        "serve": {
            "executor": "@nx/angular:webpack-dev-server",
            "options": {
                "proxyConfig": "proxy.conf.json",
                "liveReload": false
            },
            "configurations": {
                "production": {
                    "browserTarget": "ui-core-docs:build:production"
                },
                "development": {
                    "browserTarget": "ui-core-docs:build:development"
                }
            },
            "defaultConfiguration": "development"
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": [
                    "{projectRoot}/**/*.ts",
                    "{projectRoot}/**/*.html"
                ]
            }
        },
        "test": {
            "executor": "@angular-builders/custom-webpack:karma",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "customWebpackConfig": {
                    "path": "{projectRoot}/webpack.partial.js"
                },
                "main": "{projectRoot}/src/test.ts",
                "tsConfig": "{projectRoot}/tsconfig.spec.json",
                "karmaConfig": "{projectRoot}/karma.conf.js",
                "polyfills": "{projectRoot}/src/polyfills.ts",
                "styles": ["{projectRoot}/src/styles/styles.scss"],
                "stylePreprocessorOptions": {
                    "includePaths": [
                        "{projectRoot}/src/styles",
                        "libs",
                        "node_modules"
                    ]
                },
                "assets": ["{projectRoot}/src/assets"]
            },
            "configurations": {
                "ci": {
                    "codeCoverage": true
                }
            }
        },
        "serve-static": {
            "executor": "@nx/web:file-server",
            "options": {
                "buildTarget": "ui-core-docs:build"
            }
        }
    }
}
