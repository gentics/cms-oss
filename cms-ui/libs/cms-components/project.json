{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "name": "cms-components",
    "projectType": "library",
    "prefix": "gtx",
    "sourceRoot": "apps/cms-components/src",
    "implicitDependencies": ["cms-models", "mesh-models", "ui-core"],
    "tags": ["lib", "angular"],
    "targets": {
        "build": {
            "executor": "@nx/angular:ng-packagr-lite",
            "options": {
                "tsConfig": "libs/cms-components/tsconfig.lib.json",
                "project": "libs/cms-components/ng-package.json"
            }
        },
        "test": {
            "executor": "@angular-devkit/custom-webpack:karma",
            "options": {
                "main": "libs/cms-components/src/test.ts",
                "polyfills": "libs/cms-components/src/polyfills.ts",
                "tsConfig": "libs/cms-components/tsconfig.spec.json",
                "karmaConfig": "libs/cms-components/karma.conf.js",
                "stylePreprocessorOptions": {
                    "includePaths": [
                        "libs/cms-components/src/styles",
                        "libs",
                        "node_modules"
                    ]
                }
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": [
                    "libs/cms-components/**/*.ts",
                    "libs/cms-components/**/*.html"
                ]
            }
        },
        "component-test": {
            "executor": "@nx/cypress:cypress",
            "options": {
                "cypressConfig": "apps/cms-components/cypress.config.ts",
                "testingType": "component",
                "skipServe": true,
                "devServerTarget": "cms-components:build",
                "watch": false
            },
            "configurations": {
                "watch": {
                    "watch": true
                }
            }
        }
    }
}
