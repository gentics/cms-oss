{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "name": "mesh-rest-client-angular",
    "projectType": "library",
    "prefix": "gtx",
    "sourceRoot": "apps/mesh-rest-client-angular/src",
    "implicitDependencies": [
        "mesh-models",
        "mesh-rest-client"
    ],
    "tags": ["lib", "angular"],
    "targets": {
        "build": {
            "executor": "@nx/angular:ng-packagr-lite",
            "options": {
                "tsConfig": "libs/mesh-rest-client-angular/tsconfig.lib.json",
                "project": "libs/mesh-rest-client-angular/ng-package.json"
            }
        },
        "test": {
            "executor": "@angular-devkit/custom-webpack:karma",
            "options": {
                "main": "libs/mesh-rest-client-angular/src/test.ts",
                "polyfills": "libs/mesh-rest-client-angular/src/polyfills.ts",
                "tsConfig": "libs/mesh-rest-client-angular/tsconfig.spec.json",
                "karmaConfig": "libs/mesh-rest-client-angular/karma.conf.js",
                "stylePreprocessorOptions": {
                    "includePaths": [
                        "libs/mesh-rest-client-angular/src/styles",
                        "libs",
                        "node_modules"
                    ]
                }
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": [
                    "libs/mesh-rest-client-angular/**/*.ts",
                    "libs/mesh-rest-client-angular/**/*.html"
                ]
            }
        }
    }
}
