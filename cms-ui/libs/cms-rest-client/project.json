{
    "name": "cms-rest-client",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "libs/cms-rest-client/src",
    "projectType": "library",
    "tags": ["lib", "publish"],
    "targets": {
        "build": {
            "executor": "@nx/rollup:rollup",
            "outputs": [
                "{options.outputPath}"
            ],
            "defaultConfiguration": "production",
            "options": {
                "main": "{projectRoot}/src/public-api.ts",
                "outputPath": "dist/{projectRoot}",
                "tsConfig": "{projectRoot}/tsconfig.lib.json",
                "project": "{projectRoot}/package.json",
                "generateExportsField": true,
                "format": [
                    "esm",
                    "cjs"
                ]
            },
            "configurations": {
                "development": {},
                "production": {},
                "ci": {}
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/.reports/libs/cms-rest-client"],
            "options": {
                "jestConfig": "libs/cms-rest-client/jest.config.ts"
            },
            "configurations": {
                "watch": {
                    "watch": true
                },
                "ci": {
                    "color": false,
                    "jestConfig": "libs/cms-rest-client/jest.config.ci.ts"
                }
            }
        }
    }
}
