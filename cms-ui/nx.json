{
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "npmScope": "gentics",
    "tasksRunnerOptions": {
        "default": {
            "runner": "nx/tasks-runners/default",
            "options": {
                "cacheableOperations": ["build", "lint", "test", "e2e"],
                "parallel": 3
            }
        }
    },
    "workspaceLayout": {
        "appsDir": "apps",
        "libsDir": "libs"
    },
    "affected": {
        "defaultBase": "master"
    },
    "cli": {
        "packageManager": "npm"
    },
    "defaultProject": "editor-ui",
    "generators": {
        "@nx/angular:application": {},
        "@nx/angular:library": {}
    },
    "targetDefaults": {
        "build": {
            "dependsOn": ["^build"]
        }
    }
}
