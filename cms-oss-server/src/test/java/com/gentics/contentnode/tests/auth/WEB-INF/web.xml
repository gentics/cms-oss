<?xml version="1.0" encoding="UTF-8"?>
<!-- $Id: web.xml,v 1.1.2.2 2012-04-30 09:49:18 norbert Exp $ -->
<web-app  xmlns="http://java.sun.com/xml/ns/j2ee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">
	<icon></icon>
	<display-name></display-name>
	<servlet>
		<servlet-name>TestServlet</servlet-name>
		<servlet-class>com.gentics.contentnode.tests.auth.TestServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>TestServlet</servlet-name>
		<url-pattern>/test/*</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>UnrestrictedHttpAuthFakeFilter</filter-name>
		<filter-class>com.gentics.lib.servlet.filters.ModifyRequestFilter</filter-class>
		<init-param>
			<param-name>headers</param-name>
			<param-value>/WEB-INF/auth_headers_unrestricted.properties</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>RestrictedHttpAuthFakeFilter</filter-name>
		<filter-class>com.gentics.lib.servlet.filters.ModifyRequestFilter</filter-class>
		<init-param>
			<param-name>headers</param-name>
			<param-value>/WEB-INF/auth_headers_restricted.properties</param-value>
		</init-param>
	</filter>
    <filter>
        <filter-name>AuthFilterNoSync</filter-name>
        <filter-class>com.gentics.contentnode.auth.filter.HttpAuthFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AuthFilterSync</filter-name>
        <filter-class>com.gentics.contentnode.auth.filter.HttpAuthFilter</filter-class>
        <init-param>
        	<param-name>syncGroups</param-name>
        	<param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
    	<filter-name>UnrestrictedHttpAuthFakeFilter</filter-name>
    	<url-pattern>/test/unrestricted/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
    	<filter-name>RestrictedHttpAuthFakeFilter</filter-name>
    	<url-pattern>/test/restricted/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthFilterNoSync</filter-name>
        <url-pattern>/test/unrestricted/nosync</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthFilterNoSync</filter-name>
        <url-pattern>/test/restricted/nosync</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthFilterSync</filter-name>
        <url-pattern>/test/unrestricted/sync</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthFilterSync</filter-name>
        <url-pattern>/test/restricted/sync</url-pattern>
    </filter-mapping>
</web-app>
